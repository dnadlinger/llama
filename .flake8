[flake8]
ignore =
    # indentation is not a multiple of four,
    E111, E114,
    # visually indented line with same indent as next logical line,
    E129,
    # Star imports are common in idiomatic ARTIQ code
    F403, F405
    # Line breaks before/after binary operators are generated by YAPF.
    W503, W504

max-line-length=88
